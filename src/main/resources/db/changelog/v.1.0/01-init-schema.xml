<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="maxkizi" id="1">
        <createTable remarks="Таблица пользователей" tableName="app_user">
            <column remarks="ID автоинкремент" autoIncrement="true" name="user_id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>

            <column remarks="Имя" name="first_name" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column remarks="Фамилия" name="last_name" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column remarks="Информация о пользователе" name="user_info" type="varchar(200)"/>

            <column remarks="Электронная почта пользователя" name="user_email" type="varchar(30)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
